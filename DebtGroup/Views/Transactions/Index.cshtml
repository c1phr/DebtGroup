@using System.Web.UI.WebControls
@model DebtGroup.ViewModels.TransactionViewModel

@{
    ViewBag.Title = "Index";
   
}
@{
    Layout = "../Shared/_ngLayout.cshtml";
}

<h2>Transactions</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="table-responsive">
    <table class="table">
        <tr>
            <th>
                Purchaser
            </th>
            <th>
                Amount
            </th>
            <th>
                Description
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.Transactions)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Person.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a>@Html.ActionLink("Edit", "Edit", new { id = item.ID })</a>  |
                    <a data-toggle="modal" data-target="#tester" style="cursor:pointer;" ng-click="detailsData(@Html.Raw(item.ID))">Details</a>  |
                    <a>@Html.ActionLink("Delete", "Delete", new { id = item.ID })</a>
                    @*   *@
                </td>
            </tr>
        }

    </table>
</div>
<div ng-view></div>

